<nav class="flex items-center justify-center p-6 lg:px-8">
  <div class="flex gap-x-3">
    <div class="relative inline-block">
      <button popovertarget="google-popover"
              popovertargetaction="toggle"
              class="flex rounded-md px-3 py-2 text-sm font-medium text-gray-300 cursor-pointer hover:bg-gray-700 hover:text-white">
        Google
        <svg class="-mr-1 size-5 text-gray-400"
             viewBox="0 0 20 20"
             fill="currentColor"
             aria-hidden="true"
             data-slot="icon">
          <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
        </svg>
      </button>
      <div id="google-popover"
           popover="auto"
           class="absolute w-56 left-[anchor(left)] top-[calc(anchor(bottom)+5px)] origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-hidden "
           role="menu"
           aria-orientation="vertical"
           aria-labelledby="menu-button"
           tabindex="-1">
        <div class="py-1" role="none">
          <!-- Active: "bg-gray-100 text-gray-900 outline-hidden", Not Active: "text-gray-700" -->
          {% for label, url in [['Аккаунты', '/google/accounts'], ['Сайты', '/google/sites'], ['Аналитика', '/google/sites/analytics']] %}
            <a href="{{ url }}"
               class="block px-4 py-2 text-sm {{ 'text-gray-700' if url != active_link else 'bg-gray-100 text-gray-900 outline-hidden' }} hover:bg-gray-100 hover:text-gray-900 hover:outline-hidden"
               role="menuitem"
               tabindex="-1"
               id="menu-item-0">{{ label }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
    <a href="/binom/accounts"
       class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Binom</a>
  </div>
</nav>
