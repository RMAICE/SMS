<div class="flex justify-end">
  {% if not isLoggedIn %}
    <script async
            src="https://telegram.org/js/telegram-widget.js?22"
            data-telegram-login="{{ telegramBotName }}"
            data-size="medium"
            data-userpic="false"
            data-auth-url="/auth/telegram-callback"></script>
  {% else %}
    <img class="rounded-full size-8"
         alt="profile-picture"
         src="{{ photo_url if photo_url else '/icons/profile.svg' }}" />
  {% endif %}
</div>
