{% extends "./views/base.njk" %}
{% set active_link = "/google/accounts" %}
{% block main %}
  <div class="max-w-7xl mx-auto">
    <div class="px-8 xl:px-0">
      <div class="flex">
        <a href="{{ addAccUrl }}" class="block ml-auto" tabindex="-1">
          <button class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm leading-5 font-semibold text-white shadow-sm focus:outline-none focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:bg-indigo-500">
            Добавить
          </button>
        </a>
      </div>
      <div class="flow-root mt-8">
        <div class="overflow-x-auto -mx-8 -my-2">
          <div class="inline-block min-w-full py-2 align-middle px-8">
            <table class="min-w-full divide-gray-300 divide-y">
              <thead>
                <tr>
                  <th scope="col"
                      class="w-12 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap"></th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Email</th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Id</th>
                  <th scope="col" class="py-3.5 pl-3 relative"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-300">
                {% for account in accounts %}
                  <tr>
                    <td class="relative px-2">
                      <img class="rounded-full"
                           src="/google/accounts/{{ account.google_account_id }}/pfp" />
                    </td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">{{ account.email }}</td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">{{ account.google_account_id }}</td>
                    <td></td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4"
                        class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">Нет аккаунтов...</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock main %}
{% block modals %}
  {% if callbackError %}
    <div id="modalContainer"
         class="relative z-10"
         aria-labelledby="modal-title"
         role="dialog"
         aria-modal="true">
      <div class="fixed inset-0 bg-gray-500/75 transition-opacity"
           aria-hidden="true"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
          <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
            <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
              <div class="sm:flex sm:items-start">
                <div class="mx-auto flex size-12 shrink-0 items-center justify-center rounded-full {{ "bg-orange-100" if callbackError === "conflict" else "bg-red-100" }} sm:mx-0 sm:size-10">
                  {% if callbackError == "conflict" %}
                    <svg xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.5"
                         stroke="currentColor"
                         class="size-6 stroke-orange-600">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                    </svg>
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.5"
                         stroke="currentColor"
                         class="size-6 stroke-red-600">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                    </svg>
                  {% endif %}
                </div>
                <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                  <h3 class="text-base font-semibold text-gray-900" id="modal-title">Ошибка при добавлении аккаунта</h3>
                  <div class="mt-2">
                    {% if callbackError == "no_required_data" %}
                      <p class="text-sm text-gray-500">
                        Ошибка при получении данных пользователя. Отсутствуют
                        необходимые данные.
                      </p>
                    {% elif callbackError == "conflict" %}
                      <p class="text-sm text-gray-500">Аккаунт уже существует в системе.</p>
                    {% elif callbackError == "unknown" %}
                      <p class="text-sm text-gray-500">Неизвестная ошибка. {{ message }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
              <button id="closeModal"
                      onclick=""
                      type="button"
                      class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">
                Закрыть
              </button>
              <script>
            closeModal.onclick = function() {
              modalContainer.outerHTML = ''
            }
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endblock modals %}
