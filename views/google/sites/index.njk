{% extends "./views/base.njk" %}
{% set active_link = "/google/sites" %}
{% block main %}
  <div class="max-w-7xl mx-auto">
    <div class="px-8">
      <div class="flow-root mt-8">
        <div class="overflow-x-auto -mx-8 -my-2">
          <div class="inline-block min-w-full py-2 align-middle px-8">
            <table class="min-w-full divide-gray-300 divide-y">
              <thead>
                <tr>
                  <th scope="col"
                      class="w-12 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">ID</th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">URL</th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">
                    PERMISSION
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-300">
                {% for site in sites %}
                  <tr>
                    <td class="whitespace-nowrap py-4 pr-3 text-sm text-gray-900 font-medium">{{ site.google_site_id }}</td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">{{ site.url }}</td>
                    <td class="whitespace-nowrap py-4 pl-3 text-sm text-gray-500 font-medium">{{ site.permissions }}</td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="2"
                        class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">Нет сайтов...</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock main %}
