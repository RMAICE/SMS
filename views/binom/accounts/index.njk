{% extends "./views/base.njk" %}
{% set active_link = "/binom/accounts" %}
{% block main %}
  <div class="max-w-7xl mx-auto">
    <div class="px-8">
      <div class="flex">
        <button class="flex items-center gap-x-2 ml-auto rounded-md bg-indigo-600 px-3 py-2 text-center text-sm leading-5 font-semibold text-white shadow-sm focus:outline-none focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:bg-indigo-500 disabled:bg-indigo-300"
                hx-get="/binom/modals/account-add"
                hx-target="#modal-portal"
                hx-disabled-elt="this">Добавить</button>
      </div>
      <div class="flow-root mt-8">
        <div class="overflow-x-auto -mx-8 -my-2">
          <div class="inline-block min-w-full py-2 align-middle px-8">
            <table class="min-w-full divide-gray-300 divide-y">
              <thead>
                <tr>
                  <th scope="col"
                      class="w-12 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Name</th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Token</th>
                  <th scope="col"
                      class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">Host</th>
                  <th scope="col" class="py-3.5 pl-3 relative"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-300">
                {% for binomAccount in binomAccounts %}
                  <tr>
                    <td class="whitespace-nowrap py-4 pr-3 text-sm text-gray-900 font-medium">{{ binomAccount.name }}</td>
                    <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">{{ binomAccount.token }}</td>
                    <td class="whitespace-nowrap py-4 pl-3 text-sm text-gray-500 font-medium">{{ binomAccount.host }}</td>
                    <td></td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4"
                        class="whitespace-nowrap py-4 px-3 text-sm text-gray-900 font-medium">Нет аккаунтов...</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock main %}
